@model IEnumerable<Mango.Web.Models.Dtos.ProductDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a  asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New Product </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nmae</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a class="btn btn-success" asp-action="EditProduct" asp-route-ProductId="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
